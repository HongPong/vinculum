  $schema['node_vinculum_settings'] = array(
    'description' => 'Flags which show if vinculum send/receive is enabled for a given node.',
    'fields' => array(
      'nid' => array(
        'description' => 'The {node}.nid this record affects.',
        'type' => 'int',
        'unsigned' => TRUE,
        'not null' => TRUE,
        'default' => 0,
