  /**
   * Support for Trackback only.
   */
  function testTrackbackOnlySupport() {
    // The target for this test is linkback_dummy_endpoints/trackback_only
    $url = url('linkback_dummy_endpoints/trackback_only', array('absolute' => TRUE));

    // The endpoint at $url should support auto-discovery of trackbacks.
    $trackback_endpoint_url = linkback_trackback_autodetect_trackback_support($url);
    $expected = url(LINKBACK_TEST_TRACKBACK_ENDPOINT, array('absolute' => TRUE));
    $this->assertEqual($trackback_endpoint_url, $expected, t('Correct endpoint auto-discovered in the test URL at %url', array('%url', $url)));

    // Create a node linking to linkback_dummy_endpoints/no_linkback_support.
    // The linkback should report failure.
    $text = "
      This is a section of test text which <a href='{$url}'>links to a test
      endpoint</a>.";

    $settings = array(
      'type' => 'linkback_dummy_contenttype',
      'title' => 'Example node used for testing the linkback module.',
      'body' => array(
        LANGUAGE_NONE => array(
          0 => array(
            'value' => $text,
            'format' => filter_default_format(),
          ),
        ),
      ),
    );
    $node = $this->drupalCreateNode($settings);

    // This should change the {node_linkback_sent} table: a new entry should be
    // added with the nid/URL, with the handler set to 'linkback_pingback'.
    $result = db_select('node_linkback_sent', 'nls')
      ->fields('nls', array('handler'))
      ->condition('nls.nid', $node->nid)
      ->condition('nls.url', $url)
      ->execute()
      ->fetchObject();
    $this->assertEqual($result->handler, 'linkback_trackback', t("When an endpoint supports only trackback, an entry is recorded in {node_linkback_sent} with the handler 'linkback_trackback'."));

    // The endpoint should add an entry into the variables table for
    // linkback_testing_last_trackback.
    $expected = array(
      'url'       => url("node/{$node->nid}", array('absolute' => TRUE)),
      'title'     => $node->title,
      'blog_name' => variable_get('site_name', 'Drupal'),
      'excerpt'   => NULL,
    );
    $this->refreshVariables();
    $result = variable_get('linkback_testing_last_trackback', FALSE);


    $this->verbose('<h1>Expected results</h1>'
                 . '<code>' . str_replace("\n", "<br />\n", var_export($expected, TRUE)) . '</code>'
                 . '<hr />'
                 . '<h1>Actual results</h1>'
                 . '<code>' . str_replace("\n", "<br />\n", var_export($result, TRUE)) . '</code>');
    $this->assertEqual($result, $expected, t('The correct data was sent to the Trackback endpoint.'));



